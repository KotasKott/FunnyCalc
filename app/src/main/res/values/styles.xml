<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="styleNumpadButton">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorWhiteBackground</item>
        <item name="android:textSize">36dp</item>
        <item name="android:textDirection">locale</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorNumPadGray</item>

    </style>

    <style name="styleArithmeticButtons">
        <item name="android:background">@color/colorArithmeticPadGray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorButtonTextWhite0</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="styleTrigoButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorTrigoPadCyan</item>
        <item name="android:textColor">@color/colorTrigoButtonText</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
